    <link rel="stylesheet" type="text/css" href="../public/css/#style.css" media="screen" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Sono:wght@200;300;500;600;700;800&display=swap');

        * {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;

        }

        body {
            background-image: url(https://i.imgur.com/4eaC8pO.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;

        }

        .container {
            display: flex;
            justify-content: center;
            width: 100%;
            margin-top: 75px;
        }

        .card {
            background-color: #ffffff75;
            padding: 30px;
            border-radius: 4%;
            box-shadow: 3px 3px 1px 0px #00000075;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #323035;
        }

        .label_float input {
            width: 100%;
            padding: 5px 5px;
            display: inline-block;
            border: 0;
            border-bottom: 1px solid #323035;
            background-color: transparent;
            outline: none;
            min-width: 180px;
            font-size: 16px;
            transition: all .3s ease-out;
            border-radius: 0;
        }

        .label_float {
            position: relative;
            padding-top: 13px;
            margin-top: 5%;
            margin-bottom: 5%;
        }

        .label_float input:focus {
            border-bottom: 2px solid #F0E9DF;
        }

        .label_float label {
            color: #323035;
            pointer-events: none;
            position: absolute;
            top: 0;
            left: 0;
            margin-top: 13px;
            transition: all .3s ease-out;
        }

        .label_float input:focus+label {
            font-size: 13px;
            margin-top: 0;
            color: #F0E9DF;
        }

        button {
            background-color: transparent;
            border-color: #323035;
            color: #323035;
            padding: 7px;
            font-weight: bold;
            font-size: 12pt;
            margin-top: 20px;
            border-radius: 4px;
            cursor: pointer;
            outline: none;
            transition: all .5s ease-out;
        }

        button:hover {
            background-color: #323035;
            color: white;
        }

        .justify-center {
            display: flex;
            justify-content: center;
        }

        hr {
            margin-top: 10%;
            margin-bottom: 10%;
            width: 100%;

        }

        .container h1:focus {
            color: white;
        }

        .label_float input:focus+label,
        .label_float input:valid+label {
            font-size: 13px;
            margin-top: 0;
            color: #323035;
        }
    </style>

    <title>Document</title>
</head>

<body>
